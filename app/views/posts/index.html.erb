
<div class='main'>

<div class="post-search-contents"> 
  <h2 class='titles'>
    情報検索
  </h2>
</div>
  

  <div class='post-contents'>
    <div class="subtitle" >
      投稿一覧
    </div>
    <ul class='post-lists'>
    <% @posts.each do |post|%>
      <li class='list'>
      <%= link_to post_path(post.id), method: :get do %>
        <div class='post-info'>
          <h3 class='post-name'>
            <%= post.title %>
          </h3>
          <div class='post-price'>
            <span><%= post.sex.name %><br><%= post.purpose.name %></span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <% if @posts.length == 0 %>
      <li class='list'>
        <div class='post-info'>
          <h3 class='post-name'>
            投稿がありません
          </h3>
        </div>
      </li>
      <% end %>

    </ul>
  </div>

</div>


